{
  "name": "simple-config-vault",
  "displayName": "SimpleConfigVault",
  "description": "Groups configuration files into a virtual folder in VS Code Explorer",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "simpleConfigVaultView",
          "name": "[configs]",
          "contextualTitle": "SimpleConfigVault",
          "when": "config.simpleConfigVault.visible"
        }
      ]
    },
    "configuration": {
      "title": "SimpleConfigVault",
      "properties": {
        "simpleConfigVault.filePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "tsconfig*.json",
            ".gitignore",
            ".eslintrc*",
            "vite.config.*",
            "webpack.config.*"
          ],
          "description": "Glob patterns for files to include in virtual folder (supports wildcards like tsconfig*.json)"
        },
        "simpleConfigVault.visible": {
          "type": "boolean",
          "default": true,
          "description": "Show the virtual folder by default"
        },
        "simpleConfigVault.folderColor": {
          "type": "string",
          "default": "#888888",
          "description": "Hex color for folder icon or description"
        }
      }
    },
    "commands": [
      {
        "command": "simpleConfigVault.refresh",
        "title": "Refresh ConfigVault View"
      },
      {
        "command": "simpleConfigVault.toggleVisibility",
        "title": "Toggle ConfigVault Visibility"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
